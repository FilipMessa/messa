{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true,

    "alwaysStrict": true,
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node"
  },
  "exclude": [".yarn/releases/*", "**/__mocks__/**/*", "**/build/**/*", "node_modules"]
}
