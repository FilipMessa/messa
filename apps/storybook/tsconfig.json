{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "outDir": "dist",
    "noImplicitThis": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}
